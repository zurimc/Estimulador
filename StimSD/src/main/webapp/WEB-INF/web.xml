  	<error-page>
    	<exception-type>java.lang.Throwable</exception-type>
    	<location>/login.xhtml</location>
	</error-page>
  
  	<session-config>
  		<session-timeout>30</session-timeout>
  	</session-config>
  
  <welcome-file-list>
    <welcome-file>login.xhtml</welcome-file>
  </welcome-file-list>
</web-app>